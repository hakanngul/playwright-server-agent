{
  "name": "Performans Metrikleri Testi",
  "description": "Chromium tarayıcısı ile performans metriklerini toplayan test",
  "browserPreference": "chromium",
  "headless": true,
  "takeScreenshots": true,
  "browserOptions": {
    "args": ["--window-size=1920,1080", "--disable-gpu"],
    "ignoreHTTPSErrors": true,
    "slowMo": 0
  },
  "steps": [
    {
      "action": "navigate",
      "target": "https://web.dev/",
      "description": "web.dev sitesine git"
    },
    {
      "action": "wait",
      "target": "2000",
      "description": "Sayfanın yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "webdev-homepage",
      "description": "web.dev ana sayfasının ekran görüntüsünü al"
    },
    {
      "action": "click",
      "target": "//a[contains(@href, '/measure/')]",
      "strategy": "xpath",
      "description": "Measure sayfasına git"
    },
    {
      "action": "wait",
      "target": "3000",
      "description": "Sayfanın yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "webdev-measure",
      "description": "Measure sayfasının ekran görüntüsünü al"
    },
    {
      "action": "navigate",
      "target": "https://web.dev/vitals/",
      "description": "Web Vitals sayfasına git"
    },
    {
      "action": "wait",
      "target": "2000",
      "description": "Sayfanın yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "webdev-vitals",
      "description": "Web Vitals sayfasının ekran görüntüsünü al"
    },
    {
      "action": "navigate",
      "target": "https://web.dev/lighthouse-performance/",
      "description": "Lighthouse Performance sayfasına git"
    },
    {
      "action": "wait",
      "target": "2000",
      "description": "Sayfanın yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "webdev-lighthouse",
      "description": "Lighthouse Performance sayfasının ekran görüntüsünü al"
    }
  ]
}
