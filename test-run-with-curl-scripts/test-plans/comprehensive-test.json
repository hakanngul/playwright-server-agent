{
  "name": "Kapsamlı Form Testi",
  "description": "Tüm form elemanlarını ve etkileşimleri test eden kapsamlı test",
  "browserPreference": "chromium",
  "headless": false,
  "takeScreenshots": true,
  "browserOptions": {
    "args": ["--window-size=1600,900"],
    "ignoreHTTPSErrors": true,
    "slowMo": 20
  },
  "steps": [
    {
      "action": "navigate",
      "target": "https://demoqa.com/automation-practice-form",
      "description": "DemoQA Form sayfasına git"
    },
    {
      "action": "wait",
      "target": "2000",
      "description": "Sayfanın yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "form-initial",
      "description": "Başlangıç durumunun ekran görüntüsünü al"
    },
    {
      "action": "type",
      "target": "#firstName",
      "value": "John",
      "description": "Ad alanını doldur"
    },
    {
      "action": "type",
      "target": "#lastName",
      "value": "Doe",
      "description": "Soyad alanını doldur"
    },
    {
      "action": "type",
      "target": "#userEmail",
      "value": "john.doe@example.com",
      "description": "E-posta alanını doldur"
    },
    {
      "action": "click",
      "target": "//label[text()='Male']",
      "strategy": "xpath",
      "description": "Cinsiyet seçeneğini işaretle"
    },
    {
      "action": "type",
      "target": "#userNumber",
      "value": "1234567890",
      "description": "Telefon numarası alanını doldur"
    },
    {
      "action": "click",
      "target": "#dateOfBirthInput",
      "description": "Doğum tarihi alanına tıkla"
    },
    {
      "action": "wait",
      "target": "500",
      "description": "Takvimin açılmasını bekle"
    },
    {
      "action": "click",
      "target": "//div[contains(@class, 'react-datepicker__month-select')]",
      "strategy": "xpath",
      "description": "Ay seçimine tıkla"
    },
    {
      "action": "click",
      "target": "//option[text()='June']",
      "strategy": "xpath",
      "description": "Haziran ayını seç"
    },
    {
      "action": "click",
      "target": "//div[contains(@class, 'react-datepicker__year-select')]",
      "strategy": "xpath",
      "description": "Yıl seçimine tıkla"
    },
    {
      "action": "click",
      "target": "//option[text()='1990']",
      "strategy": "xpath",
      "description": "1990 yılını seç"
    },
    {
      "action": "click",
      "target": "//div[text()='15' and contains(@class, 'react-datepicker__day')]",
      "strategy": "xpath",
      "description": "15. günü seç"
    },
    {
      "action": "wait",
      "target": "500",
      "description": "Kısa bekle"
    },
    {
      "action": "type",
      "target": "#subjectsInput",
      "value": "Computer Science",
      "description": "Konu alanını doldur"
    },
    {
      "action": "pressEnter",
      "description": "Enter tuşuna bas"
    },
    {
      "action": "click",
      "target": "//label[text()='Sports']",
      "strategy": "xpath",
      "description": "Hobi seçeneğini işaretle"
    },
    {
      "action": "click",
      "target": "//label[text()='Reading']",
      "strategy": "xpath",
      "description": "Başka bir hobi seçeneğini işaretle"
    },
    {
      "action": "type",
      "target": "#currentAddress",
      "value": "123 Main St, Anytown, USA",
      "description": "Adres alanını doldur"
    },
    {
      "action": "takeScreenshot",
      "target": "form-filled",
      "description": "Doldurulmuş formun ekran görüntüsünü al"
    },
    {
      "action": "click",
      "target": "#submit",
      "description": "Formu gönder butonuna tıkla"
    },
    {
      "action": "wait",
      "target": "2000",
      "description": "Sonuçların görüntülenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "form-submitted",
      "description": "Gönderilmiş formun ekran görüntüsünü al"
    }
  ]
}
