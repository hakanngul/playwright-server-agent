{
  "name": "Chromium Tam Ekran Testi",
  "description": "Chromium tarayıcısı ile tam ekran modunda Google'a git ve arama yap",
  "browserPreference": "chromium",
  "headless": false,
  "takeScreenshots": true,
  "browserOptions": {
    "args": ["--window-size=1920,1080", "--disable-gpu"],
    "ignoreHTTPSErrors": true,
    "slowMo": 50,
    "isFullscreen": true
  },
  "steps": [
    {
      "action": "navigate",
      "value": "https://www.google.com",
      "description": "Google'a git"
    },
    {
      "action": "type",
      "target": "APjFqb",
      "strategy": "id",
      "value": "playwright",
      "description": "Arama terimini yaz"
    },
    {
      "action": "pressEnter",
      "description": "Enter tuşuna bas"
    },
    {
      "action": "wait",
      "value": "500",
      "description": "Sonuçların yüklenmesini bekle"
    },
    {
      "action": "click",
      "target": "//h3[contains(text(),'Playwright: Fast and reliable end-to-end testing for modern')]",
      "strategy": "xpath",
      "description": "Playwright Sayfasını Aç"
    },
    {
      "action": "wait",
      "value": "2000",
      "description": "Sonuçların yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "description": "Playwright sayfasının ekran görüntüsünü al"
    },
    {
      "action": "wait",
      "value": "500",
      "description": "Sonuçların yüklenmesini bekle"
    }
  ]
}