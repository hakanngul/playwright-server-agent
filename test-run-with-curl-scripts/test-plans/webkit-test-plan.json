{
  "name": "WebKit Karanlık Mod Testi",
  "description": "WebKit tarayıcısı ile karanlık modda MDN web sitesini test et",
  "browserPreference": "webkit",
  "headless": false,
  "takeScreenshots": true,
  "browserOptions": {
    "ignoreHTTPSErrors": true,
    "slowMo": 40,
    "isFullscreen": true,
    "colorScheme": "dark"
  },
  "steps": [
    {
      "action": "navigate",
      "target": "https://developer.mozilla.org/",
      "description": "MDN web sitesine git"
    },
    {
      "action": "wait",
      "target": "1500",
      "description": "Sayfanın yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "webkit-mdn-homepage-dark",
      "description": "MDN ana sayfasının karanlık modda ekran görüntüsünü al"
    },
    {
      "action": "click",
      "target": "//input[@type='search' or @placeholder='Search MDN']",
      "strategy": "xpath",
      "description": "Arama kutusuna tıkla"
    },
    {
      "action": "type",
      "target": "//input[@type='search' or @placeholder='Search MDN']",
      "strategy": "xpath",
      "value": "CSS Grid Layout",
      "description": "Arama terimini yaz"
    },
    {
      "action": "pressEnter",
      "description": "Enter tuşuna bas"
    },
    {
      "action": "wait",
      "target": "2000",
      "description": "Sonuçların yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "webkit-mdn-search-results-dark",
      "description": "Arama sonuçlarının karanlık modda ekran görüntüsünü al"
    },
    {
      "action": "click",
      "target": "//a[contains(text(), 'CSS Grid Layout') or contains(@href, 'CSS_Grid_Layout')]",
      "strategy": "xpath",
      "description": "CSS Grid Layout sayfasına git"
    },
    {
      "action": "wait",
      "target": "2000",
      "description": "Sayfanın yüklenmesini bekle"
    },
    {
      "action": "takeScreenshot",
      "target": "webkit-mdn-css-grid-dark",
      "description": "CSS Grid Layout sayfasının karanlık modda ekran görüntüsünü al"
    }
  ]
}
